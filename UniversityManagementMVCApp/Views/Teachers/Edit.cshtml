@model UniversityManagementMVCApp.Models.TeacherModel

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TeacherModel</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="IdTeacher" class="control-label"></label>
				<input asp-for="IdTeacher" class="form-control" readonly="@(true)" />
				<span asp-validation-for="IdTeacher" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="IdTeacherType" class="control-label"></label>
@*				<input asp-for="IdTeacherType" class="form-control" />
				<span asp-validation-for="IdTeacherType" class="text-danger"></span>*@
				@Html.DropDownList("IdTeacherType", new SelectList(ViewBag.teacherTypes, "IdTeacherType", "Name"))
			</div>
			<div class="form-group">
				<label asp-for="IdSubject" class="control-label"></label>
@*				<input asp-for="IdSubject" class="form-control" />
				<span asp-validation-for="IdSubject" class="text-danger"></span>*@
				@Html.DropDownList("IdSubject", new SelectList(ViewBag.subjects, "IdSubject", "Name"))
			</div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
