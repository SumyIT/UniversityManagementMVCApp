@model IEnumerable<UniversityManagementMVCApp.Models.StudentModel>

@{
	ViewData["Title"] = "Index";
}

<h1>Students</h1>

<p>
	<a asp-action="Create">Add New Student</a>
</p>
<table class="table">
	<thead>
		<tr>
@*			<th>
				@Html.DisplayNameFor(model => model.IdStudent)
			</th>*@
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Group.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.GradeAverage)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
@*				<td>
					@Html.DisplayFor(modelItem => item.IdStudent)
				</td>*@
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Group.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.GradeAverage)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { id=item.IdStudent }) |
					@Html.ActionLink("Details", "Details", new { id=item.IdStudent }) |
					@Html.ActionLink("Delete", "Delete", new { id=item.IdStudent })
					@Html.ActionLink("DetailsWithGrades", "DetailsWithGrades", new { id=item.IdStudent })
				</td>
			</tr>
		}
	</tbody>
</table>
