@model IEnumerable<UniversityManagementMVCApp.Models.GradeModel>

@{
	ViewData["Title"] = "Index";
}

<h1>Grades</h1>

<p>
	<a asp-action="Create">Add New Grade</a>
</p>
<table class="table">
	<thead>
		<tr>
@*			<th>
				@Html.DisplayNameFor(model => model.IdGrade)
			</th>*@
			<th>
				@Html.DisplayNameFor(model => model.Student.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Subject.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.GradeType.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Value)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
@*				<td>
					@Html.DisplayFor(modelItem => item.IdGrade)
				</td>*@
				<td>
					@Html.DisplayFor(modelItem => item.Student.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Subject.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.GradeType.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Value)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { id=item.IdGrade }) |
					@Html.ActionLink("Details", "Details", new { id=item.IdGrade }) |
					@Html.ActionLink("Delete", "Delete", new { id=item.IdGrade })
				</td>
			</tr>
		}
	</tbody>
</table>
