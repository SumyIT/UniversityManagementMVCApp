@model UniversityManagementMVCApp.ViewModels.GroupStudentViewModel

@{
    ViewData["Title"] = "DetailsWithStudents";
}

<h1>DetailsWithStudents</h1>

<div>
    <h4>GroupStudentViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Name }) |
    <a asp-action="Index">Back to List</a>
</div>

<label asp-for="Students" class="control-label">Students for this group</label>
@foreach (var item in Model.Students)
{
    <div style="border: 1px solid red;">
        <p>
            @Html.DisplayFor(modelItem => item.Name)
        </p>
        <p>
            @Html.DisplayFor(modelItem => item.Description)
        </p>
    </div>

    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
}